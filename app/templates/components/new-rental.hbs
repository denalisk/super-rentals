{{#if addNewRental}}
<h1>New Rental</h1>
<div>
  <form>
    <div class="form-group">
      <label for="owner">Owner</label>
      {{input value=owner id="owner"}}
    </div>

    <div class="form-group">
      <label for="propertyType">Type</label>
      {{input value=propertyType id="propertyType"}}
    </div>

    <div class="form-group">
      <label for="city">City</label>
      {{input value=city is="city"}}
    </div>

    <div class="form-group">
      <label for="bedrooms">Number of Bedrooms</label>
      {{input value=bedrooms is="id"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <button {{action 'saveRental1'}}>Save</button>
  </form>
</div>
{{else}}
<button class="btn btn-info" {{action 'rentalFormShow' }}>New Rental</button>
{{/if}}
